{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "ES5",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "removeComments": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "noImplicitThis": false
  },
  "include": ["./src"],
  "exclude": ["./node_modules/**/*", "./test/*.spec.ts"]
}